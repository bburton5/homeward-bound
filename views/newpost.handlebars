<div class="row">
  <div class="col-auto">
    <h2>Report a lost pet</h2>
  </div>
</div>

<form class="newpost-form">
<div class="itemBlock">
<label for="pet-name">Pet name:</label><span class="optionalText">*</span>
<textarea id="pet-name" name="pet-name" rows="1" cols="15"></textarea>
</div>

<div class="itemBlock">
  {{!-- <form class="user-input"> --}}
    <label for="pet-type">Breed:</label><span class="optionalText">*</span>
    <input type="text" id="pet-type" name="pet-type"><br><br>
  {{!-- </form> --}}
</div>

<div class="itemBlock">
  <label for="description">Description:</label><span class="optionalText">*</span>
  <textarea id="description-text" name="description" rows="3" cols="30"></textarea>
</div>

<div class="itemBlock">
    <label for="image-type">Attach image:<span>*</span></label>
    <input type="text" id="image-type" name="image-type"><br><br>
</div>

<div class="itemBlock">
  {{!-- <form class="user-input"> --}}
    <label for="zip-type">Zip code:<span>*</span></label>
    <input type="text" id="zip-type" name="zip-type"><br><br>
  {{!-- </form> --}}
</div>

<div class="itemBlock">
  {{!-- <form class="user-input"> --}}
    <label for="date-type">Date last seen:<span>*</span></label>
    <input type="text" id="date-type" name="date-type"><br><br>
  {{!-- </form> --}}
</div>

<div class="itemBlock">
  {{!-- <form class="user-input"> --}}
    <label for="number-type">Contact information:<span>*</span></label>
    <input type="text" id="number-type" name="number-type"><br><br>
  {{!-- </form> --}}
</div>



<div class="submit">
  <button class="submit">Submit</button>
</div>
</form>

<style>
  .itemBlock{
    width:55%;
    display:flex;
    flex-direction:column;
    justify-content:center;
    margin:auto;
    font-family: Arial, Helvetica, sans-serif;

  }

  .submit{
    width:30%;
    display:flex;
    flex-direction:column;
    justify-content:center;
    margin:auto;
  }

  span{
    color:rgb(248, 85, 85);
  }
</style>



